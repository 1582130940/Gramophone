<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:key="appearance"
        android:title="@string/settings_category_appearance"
        android:summary="@string/settings_appearance_summary"
        android:icon="@drawable/ic_palette"
        android:layout="@layout/basic_preference" />

    <Preference
        android:key="player"
        android:title="@string/settings_player_ui"
        android:summary="@string/settings_player_ui_summary"
        android:icon="@drawable/ic_play_arrow"
        android:layout="@layout/basic_preference" />

    <Preference
        android:key="behavior"
        android:icon="@drawable/ic_manufacturing"
        android:title="@string/settings_category_behavior"
        android:layout="@layout/basic_preference"
        android:summary="@string/settings_behavior_summary" />

    <Preference
        android:key="library"
        android:icon="@drawable/ic_collections_bookmark"
        android:title="@string/settings_library"
        android:summary="@string/settings_library_summary"
        android:layout="@layout/basic_preference"
        app:isPreferenceVisible="false" />

    <Preference
        android:key="personalization"
        android:icon="@drawable/ic_dashboard_customize"
        android:title="@string/settings_customization"
        android:summary="@string/settings_customization_summary"
        android:layout="@layout/basic_preference"
        app:isPreferenceVisible="false" />

    <Preference
        android:key="play"
        android:icon="@drawable/ic_headphones"
        android:title="@string/settings_player_options"
        android:summary="@string/settings_player_options_summary"
        android:layout="@layout/basic_preference"
        app:isPreferenceVisible="false" />

    <Preference
        android:key="about"
        android:title="@string/settings_about_app"
        android:summary="@string/settings_about_gramophone"
        android:icon="@drawable/ic_info"
        android:layout="@layout/basic_preference" />

    <!-- For extra space below -->
    <Preference
        android:enabled="false"
        android:title="" />

    <Preference
        android:enabled="false"
        android:title="" />

</PreferenceScreen>