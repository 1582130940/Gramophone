<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/preference_category_md"
        android:title="@string/settings_category_misc">

        <Preference
            android:key="replaygain"
            android:layout="@layout/preference_basic"
            android:title="@string/settings_replaygain"
            app:iconSpaceReserved="false" />


        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="mp3_index_seeking"
            android:layout="@layout/preference_switch"
            android:summary="@string/settings_mp3_index_seeking_summary"
            android:title="@string/settings_mp3_index_seeking"
            android:widgetLayout="@layout/preference_switch_widget"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_replaygain_boost"
        app:iconSpaceReserved="false">

        <DecibelSeekBarPreference
            android:defaultValue="0"
            android:icon="@drawable/outline_volume_up_24"
            android:key="rg_boost_gain"
            android:layout="@layout/preference_seekbar"
            android:max="15"
            android:title="@string/settings_replaygain_boost"
            app:showSeekBarValue="true" />

        <Preference
            android:icon="@drawable/ic_info"
            android:layout="@layout/preference_basic"
            android:summary="@string/settings_replaygain_boost_desc" />

    </PreferenceCategory>

</PreferenceScreen>