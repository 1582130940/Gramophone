<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/settings_replaygain"
        app:iconSpaceReserved="false">

	<DropDownPreference
		android:defaultValue="0"
		android:entries="@array/rg_mode_switch"
		android:entryValues="@array/rg_mode_switch_val"
		android:key="rg_mode"
		android:layout="@layout/preference_dropdown_md"
		android:title="@string/settings_replaygain_mode"
		app:iconSpaceReserved="false"
		app:useSimpleSummaryProvider="true" />

    <Preference
        android:icon="@drawable/ic_info"
        android:summary="@string/settings_replaygain_mode_desc"
        android:layout="@layout/preference_basic"
        />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="rg_drc"
        android:layout="@layout/preference_switch"
        android:widgetLayout="@layout/preference_switch_widget"
        app:iconSpaceReserved="false"
        android:summary="@string/settings_replaygain_drc_desc"
        android:title="@string/settings_replaygain_drc" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_replaygain_preamp"
        app:iconSpaceReserved="false">

	<Minus15SeekBarPreference
		android:defaultValue="15"
		android:icon="@drawable/outline_volume_up_24"
		android:key="rg_rg_gain"
		android:layout="@layout/preference_seekbar"
		android:max="30"
		android:title="@string/settings_replaygain_preamp"
		app:showSeekBarValue="true"
		/>

    <Preference
        android:icon="@drawable/ic_info"
        android:summary="@string/settings_replaygain_preamp_desc"
        android:layout="@layout/preference_basic"
        />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_replaygain_no_rg_amp"
        app:iconSpaceReserved="false">

	<DecibelSeekBarPreference
		android:defaultValue="0"
		android:icon="@drawable/outline_volume_down_24"
		android:key="rg_no_rg_gain"
		android:layout="@layout/preference_seekbar"
		android:max="15"
		android:title="@string/settings_replaygain_no_rg_amp"
		app:showSeekBarValue="true"
		/>

    <Preference
        android:icon="@drawable/ic_info"
        android:summary="@string/settings_replaygain_no_rg_amp_desc"
        android:layout="@layout/preference_basic"
        />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_replaygain_boost"
        app:iconSpaceReserved="false">

    <DecibelSeekBarPreference
        android:defaultValue="0"
        android:icon="@drawable/outline_volume_up_24"
        android:key="rg_boost_gain"
        android:layout="@layout/preference_seekbar"
        android:max="15"
        android:title="@string/settings_replaygain_boost"
        app:showSeekBarValue="true"
        />

    <Preference
        android:icon="@drawable/ic_info"
        android:summary="@string/settings_replaygain_boost_desc"
        android:layout="@layout/preference_basic"
        />

    </PreferenceCategory>


</PreferenceScreen>