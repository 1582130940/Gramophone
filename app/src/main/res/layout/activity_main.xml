<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fitsSystemWindows="false">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorSurface"
            app:liftOnScrollColor="?attr/colorSurface"
            app:statusBarScrim="?attr/colorSurface"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:paddingEnd="2dp"
                app:title="@string/app_name"
                app:titleTextAppearance="@style/HeadlineTextAppearance"
                app:layout_scrollEffect="compress"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:navigationIcon="@drawable/ic_menu"
                app:menu="@menu/home_menu"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabBackground="@android:color/transparent"
                app:tabContentStart="56dp"
                app:tabMode="scrollable"
                app:tabTextAppearance="@style/TabTextAppearance">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_songs" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_albums" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_artists" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_genres" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_dates" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_playlists" />

            </com.google.android.material.tabs.TabLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/fragment_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <!-- Player Layout -->
        <FrameLayout
            android:id="@+id/player_layout"
            style="@style/BottomPlayerSheetStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="66dp"
            android:fitsSystemWindows="false"
            android:clickable="true"
            android:background="?attr/colorOnSurface"
            android:translationZ="256dp"
            tools:behavior_peekHeight="1000dp">

            <!-- Preview Player -->
            <RelativeLayout
                android:id="@+id/preview_player"
                android:layout_width="match_parent"
                android:layout_height="66dp">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/album_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="6dp">
                    <ImageView
                        android:id="@+id/preview_album_cover"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_default_cover" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/album_layout"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="112dp"
                    android:orientation="vertical">
                    <org.akanework.gramophone.ui.components.MarqueeTextView
                        android:id="@+id/preview_song_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="500"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="Example title" />

                    <org.akanework.gramophone.ui.components.MarqueeTextView
                        android:id="@+id/preview_artist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="500"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="Example Artist" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/preview_control"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:backgroundTint="?attr/colorSurface"
                    android:layout_toStartOf="@id/preview_next"
                    android:layout_centerVertical="true"
                    app:icon="@drawable/pause_art"
                    app:iconTint="?attr/colorOnSurface"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/preview_next"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:backgroundTint="?attr/colorSurface"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/next_art"
                    app:iconTint="?attr/colorOnSurface"
                    app:iconSize="24dp"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp" />
            </RelativeLayout>

            <!-- Full Player -->
            <RelativeLayout
                android:id="@+id/full_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
        </FrameLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:paddingTop="84dp"
        app:menu="@menu/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>